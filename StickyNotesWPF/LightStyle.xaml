<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="brushWindowBg" Color="White"/>
    <SolidColorBrush x:Key="brushRtbBg" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="rtbFontColor" Color="#EE332622"/>
    <SolidColorBrush x:Key="statusFontColor" Color="#AAAAAAAA"/>
    <!-- custom button colors -->
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="HotPink"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
    <!-- /button colors -->
</ResourceDictionary>