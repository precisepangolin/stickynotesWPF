<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="brushWindowBg" Color="Black"/>
    <SolidColorBrush x:Key="brushRtbBg">
        <SolidColorBrush.Color>
            <Color A="255" R="60" G="60" B="60"/>
        </SolidColorBrush.Color>
    </SolidColorBrush>
    <SolidColorBrush x:Key="rtbFontColor" Color="#EEFFEEDD"/>
    <SolidColorBrush x:Key="statusFontColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="rtbBorderBrush" Color="{DynamicResource rtbBorderColor}"/>

    <Color x:Key="rtbBorderColorMouseOver">#BBBBBB</Color>
    <Color x:Key="rtbBorderColorFocus">#CCCCCC</Color>

    <SolidColorBrush x:Key="rtbBorderBrushFocus" Color="#CCCCCC"/>
    <Color x:Key="rtbBorderColor">#AAAAAA</Color>
    <!-- custom button colors -->
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="DarkOrange"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="DarkRed"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="Orange"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="Yellow"/>
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="Magenta"/>
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
    <!-- /button colors -->
    
</ResourceDictionary>