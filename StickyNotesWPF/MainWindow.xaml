
    
    <Window x:Class="StickyNotesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyNotesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        MouseDown="Window_MouseDown"
        >
    
    <Grid Margin="0" Background="Bisque">
        <Grid.Resources>
            <Style TargetType="{x:Type Button}" x:Key="formatTextStyle">
                <Setter Property="FontFamily" Value="Palatino Linotype"></Setter>
                <Setter Property="Width" Value="30"></Setter>
                <Setter Property="FontSize" Value ="14"></Setter>
                <Setter Property="CommandTarget" Value="{Binding ElementName=mainRTB}"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="8*" MinHeight="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="5*" MinHeight="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <CheckBox Margin="10" Grid.Column="0" Grid.Row="0" Click="SpellCheckToggle">Spellcheck (en-US)</CheckBox>
           <Button FontWeight="Bold" Margin="10" Grid.Column="1" HorizontalAlignment="Center" Click="Bold_MouseUp">Bold</Button>
        <Button Margin="10" Grid.Column="2" Grid.Row="0" Content="_Close window" Click="CloseButton" ToolTip="Close window"/>
        <TextBlock Margin="10" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3">
            This is going to be a new Sticky Notes App!!
        </TextBlock>
        <TextBlock Foreground="#AAAAAA" Margin="0,0,30,10" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2" Text="{Binding ElementName=WritingBox}" />
        <Ellipse Grid.Row="1" Fill="MediumAquamarine" Opacity="0.5" Panel.ZIndex="-1" Grid.ColumnSpan="2" Margin="163,34,174,43" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-13.487"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Grid.Row="1" Fill="DarkSalmon" AllowDrop="True" Panel.ZIndex="-2" Grid.ColumnSpan="3" Margin="266,52,201,48" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="3.322"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <RichTextBox  Margin="10,0,10,0" Grid.Row="1" Grid.ColumnSpan="3" AcceptsReturn="True" Foreground="SaddleBrown" Background="#19F013FF" x:Name="WritingBox" Language="en-US"  ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <GridSplitter Margin="10,0,10,0" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Background="#AAAAAAAA" />
        
        <TextBox Name ="WritingBox2" Language="en-US" Margin="10,0,10,0" Grid.Row="3" Grid.ColumnSpan="3" AcceptsReturn="True" TextWrapping="Wrap" Background="#EEEEEEEE" ScrollViewer.VerticalScrollBarVisibility="Auto">
            Place for more text
        </TextBox>
        <TextBlock Foreground="#AAAAAA" Margin="0,0,30,10" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2" Text="{Binding ElementName=WritingBox2, Path=Text.Length}" />

        <TextBlock Margin="10" Grid.Row="4" Grid.Column="1">Ende</TextBlock>

    </Grid>
</Window>
